# github: https://github.com/editorconfig/editorconfig
# configuration: https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties

root = true

[*]
indent_style = space
indent_size = 2
tab_widthe = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = off
quote_type = auto
curly_bracket_next_line = true
spaces_around_operators = true
spaces_around_brackets = outside

[*.{ts,js}]
quote_type = double

[*.{html,less,css,json}]
quote_type = double
