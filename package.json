{
  "name": "qroar",
  "private": true,
  "version": "0.1.2",
  "type": "module",
  "author": "kaze",
  "license": "GPL-3.0-only",
  "description": "A QR code browser extension.",
  "scripts": {
    "preinstall": "lefthook install",
    "dev:chrome": "vite --mode development -- --target=chrome",
    "dev:firefox": "vite build --mode test --watch -- --target=firefox",
    "test:chrome": "vite build --mode test -- --target=chrome",
    "test:firefox": "vite build --mode test -- --target=firefox",
    "test:all": "pnpm test:chrome && pnpm test:firefox",
    "build:chrome": "tsc -b && vite build --mode production -- --target=chrome",
    "build:firefox": "tsc -b && vite build --mode production -- --target=firefox",
    "build:all": "pnpm build:chrome && pnpm build:firefox",
    "tsc:check": "tsc -b --noEmit",
    "tsc:watch": "tsc -b --watch",
    "check": "biome check --write",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "commit": "cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@solid-primitives/destructure": "^0.2.2",
    "@solid-primitives/storage": "^4.3.3",
    "@solidjs/router": "^0.15.3",
    "@unocss/reset": "^66.4.2",
    "@zxing/library": "^0.21.3",
    "color.js": "^1.2.0",
    "qrcode": "^1.5.4",
    "solid-js": "^1.9.9",
    "solid-transition-group": "^0.3.0",
    "validator": "^13.15.15",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@crxjs/vite-plugin": "^2.2.0",
    "@iconify-icon/solid": "^3.0.0",
    "@iconify-icons/iconoir": "^1.2.30",
    "@iconify-icons/line-md": "^1.2.30",
    "@iconify-icons/material-symbols": "^1.2.58",
    "@iconify-icons/mdi": "^1.2.48",
    "@iconify-icons/solar": "^1.2.3",
    "@iconify-icons/svg-spinners": "^1.2.0",
    "@types/node": "^24.3.0",
    "@types/qrcode": "^1.5.5",
    "@types/validator": "^13.15.3",
    "@types/webextension-polyfill": "^0.12.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "lefthook": "^1.12.3",
    "radash": "^12.1.1",
    "typescript": "~5.8.3",
    "unocss": "^66.5.6",
    "vite": "^6.3.5",
    "vite-plugin-solid": "^2.11.8",
    "vite-plugin-zip-pack": "^1.2.4"
  }
}
